<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>
    <main class="centered">
      <h1><%= prod.title  %></h1>
      <hr />
      <div>
        <img width="500px" src="<%= prod.imageUrl %>" alt="<%= prod.title %>">
      </div>
      <h2><%= prod.price %></h2>
      <p><%= prod.description %></p>
      <form action="/cart" method="POST" style="display: inline; margin: 0; padding: 0;">
        <input type="hidden" name="productId"  value="<%= prod.id %>" />
        <button type="submit" class="btn">Add to Cart</button>
      </form>
      <form action="/cart<%= "?delete=true" %>" method="POST" style="display: inline; margin: 0; padding: 0;">
        <input type="hidden" name="productId"  value="<%= prod.id %>" />
        <button type="submit" class="btn">Delete from Cart</button>
      </form>
    </main>
<%- include('../includes/end.ejs') %>
